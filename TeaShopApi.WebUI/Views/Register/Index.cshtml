@model RegisterViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>The Menu</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="~/signup-form-20/https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="~/signup-form-20/https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/signup-form-20/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="text-wrap p-4 p-lg-5 d-flex img d-flex align-items-end" style="background-image: url(/signup-form-20/images/depositphotos_81636604-stock-illustration-vintage-grunge-menu-template.jpg);">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Tea Menu Kayıt</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="wrap d-md-flex">
						<div class="text-wrap p-4 p-lg-5 d-flex img d-flex align-items-end" style="background-image: url(/signup-form-20/images/depositphotos_81636604-stock-illustration-vintage-grunge-menu-template.jpg);">
							<div class="text w-100">
								<h2 class="mb-4">Kayıt Olma Ekranına Hoş Geldiniz!</h2>
								<p>Harika lezzetli menüyü görmek için öncelikle kayıt olunuz!</p>
							</div>
						</div>
						<div class="login-wrap p-4 p-md-5">
							<h3 class="mb-3">Hesap Oluştur</h3>
							<form method="post" class="signup-form">
								<div class="row">
									<div class="col-md-12">
										<div class="form-group d-flex align-items-center">
											<label class="label" for="name">İsminiz</label>
											<input type="text" class="form-control" asp-for="Name">
										</div>
											<div class="col-md-12">
												<div class="form-group d-flex align-items-center">
													<label class="label" for="surname">Soyisim</label>
													<input type="text" class="form-control" asp-for="Surname">
												</div>
											</div>
									</div>
										<div class="col-md-12">
											<div class="form-group d-flex align-items-center">
												<label class="label" for="username">Kullanıcı Adı</label>
												<input type="text" class="form-control" asp-for="Username">
											</div>
										</div>
									<div class="col-md-12">
										<div class="form-group d-flex align-items-center">
											<label class="label" for="email">Mail Adresiniz</label>
											<input type="text" class="form-control" asp-for="Email">
										</div>
									</div>
									
									</div>
									<div class="col-md-12">
										<div class="form-group d-flex align-items-center">
											<label class="label" for="password">Şifreniz</label>
										<input type="password" class="form-control" asp-for="Password">
										</div>
									</div>
							
						



								<div class="col-md-12">
										<div class="form-group">
											<button type="submit" class="btn btn-secondary submit p-3">Hesap Oluştur</button>
										</div>
											<div class="w-100 text-center">
								<p class="mt-4">Zaten Bir Hesabım Var <a href="/Login/Index/">Giriş Yap</a></p>
							</div>
									</div>
							</form>
						</div>							
						
						</div>
					</div>
				</div>
			</div>
		
	</section>

	<script src="~/signup-form-20/js/jquery.min.js"></script>
	<script src="~/signup-form-20/js/popper.js"></script>
	<script src="~/signup-form-20/js/bootstrap.min.js"></script>
	<script src="~/signup-form-20/js/main.js"></script>

</body>
</html>

